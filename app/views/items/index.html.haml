      = link_to "#women" ,class:"women button" do
        レディース
      = link_to "#men" ,class:"men button" do
        メンズ
      = link_to "#appliance" ,class:"appliance button" do
        家電・スマホ・カメラ
      = link_to "#toy" ,class:"toy button" do
        おもちゃ・ホビー・グッズ

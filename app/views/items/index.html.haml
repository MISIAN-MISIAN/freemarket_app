      .items-images
        %ul.images
        - @items.each do |item|
          %li.image
            .product
              = link_to item_path(item.id) ,class:"product-image" do
                .product-card
                  %span.product-price
                    = "¥#{item.price}"
                  = image_tag "#{item.image}", class:"product-image-size", alt: "商品写真"
                  .product-description

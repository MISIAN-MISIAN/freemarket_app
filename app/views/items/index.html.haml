= render "items/header"
- breadcrumb :root
= breadcrumbs pretext: "トップページ",separator: " &rsaquo; ", class: "breadcrumbs-list"
.main-top 
  .advertisements 
    .advertisement 
      %ul.advertisement-box
        %li
          = image_tag "pictweet.jpg", class: "scroll-advertisement one"
        %li
          = image_tag "sns_01.jpg", class: "scroll-advertisement second"
        %li
          = image_tag "pictweet.jpg", class: "scroll-advertisement third"

.wrapper-payment
  = render "devise/registrations/header1"
  .l-content
    %section.l-container
      %h2.l-header クレジットカード情報入力
      .l-main
        .l-main__container
          .input-information
            %h3.l-main__header カード番号
            %p.required 必須
          .card_number
            %input.card_number_form{placeholder: "半角数字のみ", type: "text"}
          %ul.card-lists
            %li.card-logo
              = image_tag "logo_visa.gif"
            %li.card-logo
              = image_tag "logo_mastercard.gif"
            %li.card-logo
              = image_tag "320px-Saison_card_logo.svg.png"
            %li.card-logo
              = image_tag "jcb-logomark-img-02.gif"
            %li.card-logo
              = image_tag "amex-logomark-img-05.gif"
            %li.card-logo
              = image_tag "diners-logomark-img-02.gif"
            %li.card-logo
              = image_tag "discover-logomark-img-07.gif"
          .l-main__cont
            .input-information
              %h3.expiration 有効期限
              %p.required 必須
            .month
              = succeed "\u{3000}\u{6708}" do
                %select{name: "month"}
                  %option{value: ""} --
                  %option{value: "1"} 1
                  %option{value: "2"} 2
                  %option{value: "3"} 3
                  %option{value: "4"} 4
                  %option{value: "5"} 5
                  %option{value: "6"} 6
                  %option{value: "7"} 7
                  %option{value: "8"} 8
                  %option{value: "9"} 9
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
            .year
              = succeed "\u{3000}\u{5e74}" do
                %select{name: "year"}
                  %option{value: ""} --
                  %option{value: "2019"} 2019
                  %option{value: "2020"} 2020
                  %option{value: "2021"} 2021
                  %option{value: "2022"} 2022
                  %option{value: "2023"} 2023
                  %option{value: "2024"} 2024
                  %option{value: "2025"} 2025
                  %option{value: "2026"} 2026
                  %option{value: "2027"} 2027
                  %option{value: "2028"} 2028
                  %option{value: "2029"} 2029
                  %option{value: "2030"} 2030
          .input-information-box
            .input-information
              %h3.securityCord セキュリティーコード
              %p.required 必須
            %input{placeholder: "カード背面4桁もしくは3桁の番号", type: "text"}
            = link_to "#", class: "info" do
              %i.fas.fa-question-circle>
              %h3 カード裏面の番号とは？
          = link_to "#", class: "l-footer", style: "text-decoration: none;" do
            %button.submit_btn{:type => "submit"} 
              %h3 次へ進む
  = render "sign_up_footer"
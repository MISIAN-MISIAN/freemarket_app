.wrapper-address
  = render "header1" 
  .l-content
    %section.l-container
      %h2.l-header お届け先住所入力
      .l-main
        .l-main__container
          .custermer-info
            %h3.custermer-detail 郵便番号
            %p.required 必須
          %div
            %input.zipcode{placeholder: "例) 123-4567", type: "text"}/
          .custermer-info
            %h3.custermer-detail 都道府県
            %p.required 必須
          .pref
            = form_for "" do |f|
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name
          .custermer-info
            %h3.custermer-detail 市区町村
            %p.required 必須
          .city
            %input.city-villege{placeholder: "例) 横浜市緑区", type: "text"}
          .custermer-info
            %h3.custermer-detail 番地
            %p.required 必須
          .street
            %input.street-number{placeholder: "例) 青山1-1-1", type: "text"}
          .custermer-info
            %h3.custermer-detail 建物名
            %p.random 任意
          .building
            %input.building-name{placeholder: "例) 柳ビル103", type: "text"}
          .custermer-info
            %h3.custermer-detail 電話番号
            %p.random 任意
          .phone
            %input.phone-number{placeholder: "例) 09012345678", type: "text"}
          = link_to step4_users_path,class: "l-footer" do
            %button.submit_btn{type: "submit"} 
              %h3 次へ進む
  = render "sign_up_footer"

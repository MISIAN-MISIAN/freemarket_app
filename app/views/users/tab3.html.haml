= render "items/header"
- breadcrumb :"/users/index/tab3"
= render "layouts/breadcrumbs" 
  
.mypage-main-containe
  %main.mypage-container.clearfix
    .l-content-tab
      %section.tab-container
        %h2.tab-header 出品した商品
        .tab-panel
          %ul.tab-group
            %li.tab.tab-A 出品中
            %li.tab.tab-B 取引中
            %li.tab.tab-C.is-active 売却済み
          .tab-content
            %ul.panel-group
              %li.panel.tab-A.is-show
                - @items.each do |item|
                  .panel-container
                    - if item.buyer_id.blank?
                      = image_tag "#{item.image}", class:"panel-image"
                      %p.panel-message
                        = item.name
                      = link_to edit_item_path(item.id), class: "pager-next" do
                        %i.fas.fa-chevron-right
                    - else 
                      = image_tag "logo_gray.svg", class:"tab-logo"
                      %h5.panel-content
                        出品中の商品がありません
              %li.panel.tab-B 
                = image_tag "logo_gray.svg", class:"tab-logo"
                %h5.panel-content
                  取引中の商品がありません
              %li.panel.tab-C 
                - @items.each do |item|
                  .panel-container-c
                    - if item.buyer_id.present?
                      .image-text
                        = image_tag "#{item.image}", class:"panel-image"
                        %p.panel-message-item-name
                          = item.name
                      .next-page
                        = link_to edit_item_path(item.id), class: "pager-next" do
                          %i.fas.fa-chevron-right
                    - else 
                      = image_tag "logo_gray.svg", class:"tab-logo"
                      %h5.panel-content
                        売却済の商品がありません
      %ul.pager
        %li.pagers
          = link_to "#", class: "pager-prev" do
            %i.fas.fa-chevron-left
        %li.pagers
          = link_to "#", class: "pager-next" do
            %i.fas.fa-chevron-right
  


    = render 'users/side-bar'
= render "items/footer"